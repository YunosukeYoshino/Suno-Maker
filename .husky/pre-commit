#!/bin/sh
. "$(dirname -- "$0")/_/husky.sh"

# ステージングされたファイルに対してのみ lint-staged を実行
bunx lint-staged

# TypeScript型チェック（テストファイルを除く）
bunx tsc --noEmit --skipLibCheck

# テスト実行（警告の場合はパス）
bun test || true

# Claude Code Review（知見更新チェック付き）
echo "🤖 Claude Code Review & Learning Check..."
claude -p "/learnings"
